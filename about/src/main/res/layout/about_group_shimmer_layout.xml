<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/shimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/shimmer_logo_community"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_logo_photo"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:background="@color/background_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/shimmer_name"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/background_shimmer"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_logo_community" />

    <View
            android:id="@+id/shimmer_label_member"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@color/background_shimmer"
            android:textAppearance="@style/Community.Normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_name" />

    <View
            android:id="@+id/shimmer_description"
            android:layout_width="0dp"
            android:layout_height="254dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@color/background_shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_chip_group" />

    <View
            android:id="@+id/shimmer_chip_group"
            android:layout_width="64dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/shimmer_chip"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_label_member" />

    <View
            android:id="@+id/shimmer_chip_group2"
            android:layout_width="64dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/shimmer_chip"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/shimmer_chip_group"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_label_member" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>